


  <div class="row">

    <div class="thumbnail">
      <img src="<%= @tarea.ubicacion %>">
        <div class="caption">
          <h3><%= @tarea.title %></h3>
          <p><%= @tarea.description %></p>
      </div>
    </div>


    <div class="thumbnail">
      <h3>Usuarios que han completado la tarea</h3>

      <table class='table'>
      <% @tarea.users.each do |user| %>
          <tr>
            <td><td><img src="<%= user.foto %>" style ="width:100px;height:100px;"></td></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
          </tr>
      <% end %>
      </table>
    </div>

    <div class="thumbnail">
      <h3>Listado de Usuarios</h3>

      <table class='table'>
      <% @users.each do |user| %>
          <tr>
            <td><img src="<%= user.foto %>" style ="width:100px;height:100px;"></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
          </tr>
      <% end %>
      </table>
    </div>

  </div>


<%= link_to 'Edit', edit_tarea_path(@tarea) %> |
<%= link_to 'Back', tareas_path %>
